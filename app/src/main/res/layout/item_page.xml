        <!--아이탬 속성-->
        <androidx.appcompat.widget.SearchView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:outlineAmbientShadowColor="@color/white"
            app:iconifiedByDefault="false"
            app:queryHint="찾으시는 아이템을 검색하세요" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:background="#a0111111">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/item_listview_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/cntLike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff3333"
                    android:paddingRight="15dp"
                    android:text="0"/>


                <RadioGroup
                    android:id="@+id/checkItem"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/rdoLike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:button="@drawable/radio_btn_like"/>
                    <RadioButton
                        android:id="@+id/rdoHate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:button="@drawable/radio_btn_unlike"/>

                </RadioGroup>

                <TextView
                    android:id="@+id/cntUnlike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:textColor="#8080ff"
                    android:text="0"/>


            </LinearLayout>
            <TextView
                android:id="@+id/text_item_assess"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="아이템 평가 : 대체로 후짐"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textSize="17dp">
            </TextView>
            <TextView
                android:id="@+id/text_item_assess_per"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="%의 사용자가 이 아이탬을 좋아합니다"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textSize="17dp">
            </TextView>

            <Button
                android:id="@+id/btnSearchHome"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="@drawable/button_small"
                android:fontFamily="@font/kodia"
                android:text="카테고리 보기"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:layout_marginTop="2dp"/>

            <Button
                android:id="@+id/btn_bookmark_list"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="@drawable/button_small"
                android:fontFamily="@font/kodia"
                android:text="즐겨찾기"
                android:textColor="#ffffff"
                android:textSize="25dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>